<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:Tatoeba.Mobile.Views"
            x:Class="Tatoeba.Mobile.Views.MainPage">
    <TabbedPage.Children>

        <NavigationPage Title="$Random" Icon="dice.png">
            <x:Arguments>
                <views:SentenceDetailPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="$Search" Icon="search.png">
            <x:Arguments>
                <views:SearchPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="$Recent" Icon="last_contribs.png">          
            <x:Arguments>
              <views:ContributionsPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="$Browse" Icon="browse.png">
            <x:Arguments>
                <views:SearchResultsPage />
            </x:Arguments>
        </NavigationPage>


    </TabbedPage.Children>
</TabbedPage>